{
  "name": "bash-runner",
  "displayName": "Bash Run Button",
  "description": "Run bash scripts",
  "version": "0.0.1",
  "publisher": "dominic-valerio",
  "engines": {
    "vscode": "^1.66.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DominicValerio/bash-runner"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "bash"
  ],

  "activationEvents": [
    "onCommand:bash-runner.run",
    "onStartupFinished"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "bash-runner.run",
        "title": "Run Bash File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/context": [
        {
					"when": "editorLangId == shellscript",
          "command": "bash-runner.run",
          "group": "navigation"
        }
      ],
      "editor/title/run": [
        {
					"when": "editorLangId == shellscript",
          "command": "bash-runner.run",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
					"when": "editorLangId == shellscript",
          "command": "bash-runner.run",
          "group": "navigation"
        }
      ]
    }
  },
  "configuration": {
    "type": "object",
    "title": "Run Code configuration",
    "bash-runner.executor": {
      "type": "string",
      "default": "Bash",
      "description": "Set the executor for Bash scripts.",
      "scope": "resource"
    },
    "properties": {
      "type": "object"
    }
  },
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"ts-loader": "^9.2.8",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"@vscode/test-electron": "^2.1.3"
	}
}
